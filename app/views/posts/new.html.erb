<link rel="stylesheet" href"app/assets/stylesheets/new.scss">

<div class="newpost">
  <h3>新規投稿ページ</h3>
  <%= form_for @post do |f| %>
    
  <div class="field">
    <%= f.label :"場所" %>
    <%= f.text_field :place, :size => 30 %>
  </div>

  <div class="field">
    <%= f.label :"店名" %>
    <%= f.text_area :shop_name, :size => 30 %>
  </div>

  <div class="field">
    <% if current_user.admin? %>
      <%= f.label :"住所" %>
      <%= f.text_field :address, :size => 30 %>
    <% end %>
  </div>

  <div class='form-group'>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <div class='form-check'>
            <%= tag.label class: 'form-check-label' do %>
                <%= tag.check_box class: 'form-check-input' %>
                <%= tag.text %>
            <% end %>
        </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :"  " %>
    <%= f.file_field :image %>
  </div>

<%= form_with model: @lecture , url: lectures_new_path ,local: true do |f| %>
  <div class="post_form">
   <%= f.radio_button :overall, 5 ,id: 'star1'%>
   <label for="star1"><span class="text">最高</span>★</label>

   <%= f.radio_button :overall, 4 ,id: 'star2'%>
   <label for="star2"><span class="text">良い</span>★</label>

   <%= f.radio_button :overall, 3 ,id: 'star3'%>
   <label for="star3"><span class="text">普通</span>★</label>

   <%= f.radio_button :overall, 2 ,id: 'star4'%>
   <label for="star4"><span class="text">悪い</span>★</label>

   <%= f.radio_button :overall, 1 ,id: 'star5'%>
   <label for="star5"><span class="text">最悪</span>★</label>
  </div>
  
  <%= f.submit "カフェを投稿する" %>
  <% end %>
  <% end %>

  <%= link_to "一覧に戻る", posts_path %>
</div>